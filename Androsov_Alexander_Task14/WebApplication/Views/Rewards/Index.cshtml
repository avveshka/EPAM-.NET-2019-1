@model WebApplication.ViewModels.RewardsViewModel
@{
    ViewBag.Title = "Rewards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <h2>Rewards</h2>
    <hr />
    <table class="table table-striped table-hover" style="table-layout:fixed; word-break:break-word;">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Models)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        @Html.ActionLink("Edit", "EditReward", "Rewards", new { id = item.ID }, new { @type = "button", @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Remove", "RemoveReward", "Rewards", new { id = item.ID }, new { @type = "button", @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    @Html.ActionLink("Add new", "CreateReward", "Rewards", new { @type = "button", @class = "btn btn-primary" })
</div>