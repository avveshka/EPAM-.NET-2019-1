@model List<UsersAndRewards.Entities.UserViewModel>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="jumbotron">
    <h2>Users</h2>

    <hr />

    <table class="table table-striped table-hover" style="table-layout:fixed; word-break:break-word;">
        <thead>
            <tr>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Birth date</th>
                <th scope="col">Age</th>
                <th scope="col">Rewards</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.BirthDate.ToShortDateString()</td>
                    <td>@item.Age</td>
                    <td>@item.Rewards</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", "Users", new { id = item.ID }, new { @type = "button", @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Remove", "RemoveUser", "Users", new { id = item.ID }, new { @type = "button", @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    @Html.ActionLink("Add new", "CreateUser", "Users", new { @type = "button", @class = "btn btn-primary" })
</div>